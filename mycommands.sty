}
\newcommand{\Transducer}[6][3]{%
    \begin{tikzpicture}
        \Tree
            [.\node(root){#3};
                #4
            ]

        \node (label) at ($(root)+(-#1em,0)$) {#2};
        \node (tree) at ($(root)+(#1em,0)$) {%
            \Tree
                [.\node{#5};
                    #6
                ]
            };
        \foreach \Node in {label,tree}
            \draw[dashed] (\Node) to (root);
    \end{tikzpicture}
}

